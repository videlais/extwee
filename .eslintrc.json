{
    "env": {
        "browser": true,
        "es2020": true,
        "jest/globals": true
    },
    "extends": [
        "standard",
        "plugin:jest/recommended",
        "plugin:jsdoc/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "rules": {
        "semi": ["error", "always"]
    },
    "plugins": [
        "jest",
        "@babel",
        "jsdoc"
    ],
    "parser": "@babel/eslint-parser"
}
